# Planeta X â€“ OpenRouter LLM Configuration
# Copy this file to .env and fill in your values

# OpenRouter API key (get from https://openrouter.ai/keys)
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Model to use (see https://openrouter.ai/models)
# Recommended for education: google/gemma-3-27b-it:free or openai/gpt-4o-mini
OPENROUTER_MODEL=google/gemma-3-27b-it:free

# Site info for OpenRouter rankings (optional)
OPENROUTER_SITE_URL=https://planetax.prototypowy.pl
OPENROUTER_SITE_NAME="Planeta X Akademia"

# Max tokens per response
LLM_MAX_TOKENS=800

# Temperature (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.7

# CORS allowed origins (comma-separated, * for all)
CORS_ORIGINS=*
